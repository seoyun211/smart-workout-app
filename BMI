def calculate_bmi(weight, height_cm):
    height_m = height_cm / 100  # cm를 m로 변환
    return weight / (height_m ** 2)

def classify_bmi(bmi, gender):
    if gender == "남성":
        if bmi < 18.5:
            return "저체중"
        elif 18.5 <= bmi < 24.9:
            return "보통"
        elif 25 <= bmi < 29.9:
            return "과체중"
        else:
            return "비만"
    elif gender == "여성":
        if bmi < 18.0:
            return "저체중"
        elif 18.0 <= bmi < 23.9:
            return "보통"
        elif 24 <= bmi < 28.9:
            return "과체중"
        else:
            return "비만"
    else:
        return "성별을 정확히 입력하세요."

if __name__ == "__main__":
    gender = input("성별을 입력하세요 (남성/여성): ").strip()
    weight = float(input("체중을 kg 단위로 입력하세요: "))
    height_cm = float(input("키를 cm 단위로 입력하세요: "))
    
    bmi = calculate_bmi(weight, height_cm)
    category = classify_bmi(bmi, gender)
    
    print(f"당신의 BMI는 {bmi:.2f}이며, {category}입니다.")

 
#1. 저체중 (BMI < 18.5 / 여성: BMI < 18.0)

#운동 목표: ✔ 근육량 증가&체중 증가
# 근력 운동(주 3회)
# 전신 근력 운동을 우선적으로 진행
#중량을 점진적으로 증가 (8~12회 반복 가능한 무게)
#운동 예시: 스쿼트, 데드리프트, 벤치프레스, 로우, 숄더프레스, 맨몸운동(푸쉬업, 런지) 후 중량 운동으로 진행
#식단 팁: 단백질(고기, 생선, 두부) & 탄수화물(고구마, 현미밥) 균형 잡힌 식사, 운동 후 단백질 보충제 활용 추천


# 2. 정상 체중 (BMI 18.524.9 / 여성: BMI 18.023.9)

# 운동 목표: 체지방 유지
# 근력 운동(주 3회)
# 전신을 균형 있게 운동
# 운동 예시: 스쿼트, 런지, 데드리프트, 벤치프레스, 풀업
# 유산소 운동 (주 3회, 30-40분)
# 중강도 유산소 운동 추천 : 조깅(속도 6~8km/h) 러닝머신 기준
# 식단 팁: 가공식품, 과자, 탄산음료 줄이기, 단백질 & 채소 중심 식단 유지


# 3. 과체중 (BMI 2529.9 / 여성: BMI 2428.9)

#운동 목표: 체지방 감소
# 근력 운동 (주 4~5회)
# 대근육군(하체, 등, 가슴) 위주 훈련
# 운동 예시: 스쿼트, 런지, 데드리프트, 벤치프레스, 로우
# 유산소 운동 (주 4-5회, 40-60분)
# 지방 연소를 위한 유산소 운동
# 운동 예시: 빠른 걷기 (40-60분, 속도 6,7km/h) 러닝머신 기준 
# 근력 운동과 유산소 운동 병행
# 식단 팁: 가공식품, 당류 섭취 제한, 식사량 조절 (총 섭취 칼로리 조절), 저탄수화물 & 고단백 식단 추천


#4. 비만 (BMI ≥ 30 / 여성: BMI ≥ 29)

# 운동 목표: 체지방 감소, 건강한 생활 습관 정착
# 근력 운동 (주 3~4회, 저강도부터 시작)
# 관절 부담 줄이기 위해 맨몸운동 → 점진적 중량 운동
# 운동 예시: 맨몸 스쿼트, 푸쉬업, 레그 프레스, 랫풀다운
# 유산소 운동 (주 6회 이상, 40~60분)
# 운동 예시: 빠른 걷기 (속도 5~7km/h), 자전거 타기(무릎부담이 적음)
# 근력운동과 유산소 운동 병행, 유산소 필수
# 식단 팁: 칼로리 조절 필수! 고단백 & 저탄수화물 식단, 물 많이 마시기 (하루 2L 이상)

bmi_plans = {
    "저체중": {
        "운동 목표": "근육량 증가 & 체중 증가",
        "근력 운동": "주 3회, 전신 근력 운동 (스쿼트, 데드리프트, 벤치프레스, 로우, 숄더프레스)",
        "유산소 운동": "HIIT (고강도 인터벌 트레이닝) 20~30분",
        "식단": "고단백 & 충분한 탄수화물 (고구마, 현미, 닭가슴살)"
    },
    "정상 체중": {
        "운동 목표": "체지방 유지",
        "근력 운동": "주 3회, 전신 균형 운동 (스쿼트, 런지, 데드리프트, 벤치프레스, 풀업)",
        "유산소 운동": "중강도 유산소 (조깅, 싸이클) 30~40분",
        "식단": "가공식품, 당류 줄이고 균형 잡힌 식단 유지"
    },
    "과체중": {
        "운동 목표": "체지방 감소",
        "근력 운동": "주 4~5회, 대근육군 (하체, 등, 가슴) 중심",
        "유산소 운동": "빠른 걷기 (40~60분) 또는 등산",
        "식단": "저탄수화물 & 고단백 식단, 가공식품 제한"
    },
    "비만": {
        "운동 목표": "체지방 감소 & 건강한 습관",
        "근력 운동": "주 3~4회, 맨몸 운동부터 시작 (스쿼트, 푸쉬업, 레그 프레스, 랫풀다운)",
        "유산소 운동": "빠른 걷기 (속도 5~7km/h), 자전거 타기",
        "식단": "칼로리 조절 필수, 저탄수화물 & 고단백, 물 많이 섭취"
    }
}

# JSON 파일로 저장
with open("bmi_exercise_plans.json", "w", encoding="utf-8") as file:
    json.dump(bmi_plans, file, ensure_ascii=False, indent=4)

if __name__ == "__main__":
    gender = input("성별을 입력하세요 (남성/여성): ").strip()
    weight = float(input("체중을 kg 단위로 입력하세요: "))
    height_cm = float(input("키를 cm 단위로 입력하세요: "))

    bmi = calculate_bmi(weight, height_cm)
    category = classify_bmi(bmi, gender)

    if category in bmi_plans:
        print(f"\n당신의 BMI는 {bmi:.2f}이며, {category}입니다.")
        print("\n📌 운동 계획:")
        for key, value in bmi_plans[category].items():
            print(f"- {key}: {value}")
    else:
        print(category) 
