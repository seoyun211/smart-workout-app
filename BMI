def calculate_bmi(weight, height_cm):
    height_m = height_cm / 100  # cmë¥¼ më¡œ ë³€í™˜
    return weight / (height_m ** 2)

def classify_bmi(bmi, gender):
    if gender == "ë‚¨ì„±":
        if bmi < 18.5:
            return "ì €ì²´ì¤‘"
        elif 18.5 <= bmi < 24.9:
            return "ë³´í†µ"
        elif 25 <= bmi < 29.9:
            return "ê³¼ì²´ì¤‘"
        else:
            return "ë¹„ë§Œ"
    elif gender == "ì—¬ì„±":
        if bmi < 18.0:
            return "ì €ì²´ì¤‘"
        elif 18.0 <= bmi < 23.9:
            return "ë³´í†µ"
        elif 24 <= bmi < 28.9:
            return "ê³¼ì²´ì¤‘"
        else:
            return "ë¹„ë§Œ"
    else:
        return "ì„±ë³„ì„ ì •í™•ížˆ ìž…ë ¥í•˜ì„¸ìš”."

if __name__ == "__main__":
    gender = input("ì„±ë³„ì„ ìž…ë ¥í•˜ì„¸ìš” (ë‚¨ì„±/ì—¬ì„±): ").strip()
    weight = float(input("ì²´ì¤‘ì„ kg ë‹¨ìœ„ë¡œ ìž…ë ¥í•˜ì„¸ìš”: "))
    height_cm = float(input("í‚¤ë¥¼ cm ë‹¨ìœ„ë¡œ ìž…ë ¥í•˜ì„¸ìš”: "))
    
    bmi = calculate_bmi(weight, height_cm)
    category = classify_bmi(bmi, gender)
    
    print(f"ë‹¹ì‹ ì˜ BMIëŠ” {bmi:.2f}ì´ë©°, {category}ìž…ë‹ˆë‹¤.")

 
